<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xutp.dao.UserDAO">

    <resultMap id="UserResultMap" type="com.xutp.entity.User">
        <id property="id" column="id" />
        <result property="name" column="name" />
    </resultMap>

    <!-- 插入用户 -->
    <insert id="save" parameterType="com.xutp.entity.User">
        INSERT INTO t_user (name)
        VALUES (#{name})
    </insert>

    <!-- 查询所有用户 -->
    <select id="queryAllUsers" resultMap="UserResultMap">
        SELECT id, name
        FROM t_user
    </select>

